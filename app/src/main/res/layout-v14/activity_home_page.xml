<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gwen.automaticfloorcleaner.HomePage">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="45dp"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Select Room"
            android:id="@+id/btnSelectRoom"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="Switch to RC mode"
            android:id="@+id/btnRCMode"
            android:layout_row="5"
            android:layout_column="11" />

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/btnProfile"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:id="@+id/btnNotification"
            android:layout_row="6"
            android:layout_column="11" />
    </GridLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleStartStop"
        android:textOff="Start"
        android:textOn="Stop"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Auto Floor Cleaner is off..."
        android:id="@+id/txtAFCStatus"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome Gwen"
        android:id="@+id/txtWelcomeMessage"
        android:layout_alignTop="@+id/toggleStartStop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
